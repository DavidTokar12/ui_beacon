<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<Website name="Gmail" xmlns:xi="http://www.w3.org/2001/XInclude">


    <Header description="Global header, always visible" position="top of the screen">

        <SearchBar
            action="When a user types a query and presses Enter, the displayed email list filters to matching emails."
            placeholder="Search mail"
        />

        <Button
            action="Shows advanced search options"
            icon="Filter icon"
        />

        <PopUp description="Advanced search options">
            <TextInput placeholder="From" />
            <TextInput placeholder="To" />
            <TextInput placeholder="Subject" />
            <TextInput placeholder="Has the words" />
            <TextInput placeholder="Doesn't have" />

            <Select action="Filters results by message size">
                <Option text="greater than" />
                <Option text="less than" />
            </Select>

            <TextInput placeholder="Size (in MB)" />

            <Select action="Filters results by date range">
                <Option text="1 day" />
                <Option text="1 week" />
                <Option text="1 month" />
            </Select>

            <CheckBox action="Include only emails with attachments" />
            <CheckBox action="Exclude chat messages" />

            <Button action="Search with advanced filters">Search</Button>
            <Button action="Create filter from these rules">Create filter</Button>
        </PopUp>

        <DropDown icon="Question mark" action="Open support options">
            <DropDownValue action="Opens link to help page with FAQ" text="Help" />
            <DropDownValue action="Opens link to a gmail training program offered by google"
                text="Training" />
            <DropDownValue action="Opens link to updates in chronological order" text="Updates" />
            <DropDownValue
                action="Opens `Send feedback to Google link` where users can report an issue or suggest an idea."
                text="Send feedback to Google" />
        </DropDown>


        <Button icon="Settings icon" action="Opens setting options" />

        <Wrapper name="setting options" visibleWhen="Settings button is clicked">
            <Nav text="See all settings" to="AllSettings" />

            <Select action="Selects the `density` of how to display the email list." text="Density">
                <Option text="Default" />
                <Option text="Comfortable" />
                <Option text="Compact" />
            </Select>

            <Select action="Selects the theme of the website from a list of predefined themes."
                text="Theme">
                <Nav text="View all" to="Page with a list of all the available themes." />
            </Select>

            <Select action="Determines the order in which emails are displayed in the inbox."
                text="Inbox type">
                <Option text="Default">
                    <Nav text="Customize" to="Default Inbox customization page" />
                </Option>
                <Option text="Important first" />
                <Option text="Unread first" />
                <Option text="Starred first" />
                <Option text="Priority Inbox">
                    <Nav text="Customize" to="Priority Inbox customization page" />
                </Option>
                <Option text="Multiple Inboxes">
                    <Nav text="Customize" to="Multiple Inboxes customization page" />
                </Option>
            </Select>

            <Select action="Configures the reading pane to change the layout of email previews."
                text="Reading pane">
                <Option text="No split" />
                <Option text="Right of inbox" />
                <Option text="Below inbox" />
            </Select>

            <Toggle action="Enables or disables conversation view for threading related emails."
                text="Email threading">
                <Option text="Conversation view" selected="true" />
            </Toggle>
        </Wrapper>

    </Header>

    <SideBar position="left of the screen" description="Global sidebar, always visible">
        <Button
            action="Opens a compose window"
            icon="Pencil icon"
            text="Compose"
        />

        <Nav description="Mailbox navigation">
            <NavItem
                to="Inbox"
                icon="Inbox icon"
                text="Inbox"
                action="Opens the Inbox page"
            />
            <NavItem
                to="Starred"
                icon="Star icon"
                text="Starred"
                action="Opens the Starred page"
            />
            <NavItem
                to="Snoozed"
                icon="Clock icon"
                text="Snoozed"
                action="Opens the Snoozed page"
            />
            <NavItem
                to="Sent"
                icon="Outgoing arrow icon"
                text="Sent"
                action="Opens the Sent page"
            />
            <NavItem
                to="Drafts"
                icon="Draft icon"
                text="Drafts"
                action="Opens the Drafts page"
            />
            <NavItem
                to="Important"
                icon="Exclamation icon"
                text="Important"
                action="Opens the Important page"
            />
            <NavItem
                to="AllMail"
                icon="Envelope icon"
                text="All Mail"
                action="Opens the All Mail page"
            />
            <NavItem
                to="Spam"
                icon="Warning icon"
                text="Spam"
                action="Opens the Spam folder"
            />
            <NavItem
                to="Trash"
                icon="Trash bin icon"
                text="Trash"
                action="Opens the Trash folder"
            />
            <NavItem
                to="Categories"
                icon="Folder icon"
                text="Categories"
                action="Opens the Categories page"
            />
            <NavItem
                to="ManageLabels"
                icon="Settings icon"
                text="Manage labels"
                action="Navigates to label management"
            />
            <NavItem
                to="CreateNewLabel"
                icon="Plus icon"
                text="Create new label"
                action="Opens the new label creation page"
            />
            <List
                description="Labels created by the user. Clicking a label shows all emails with that label." />
        </Nav>
    </SideBar>

    <Page name="Drafts" description="Unsent emails. Same structure as Inbox." />

    <Page name="Starred" description="Starred messages. Same structure as Inbox." />

    <Page name="Snoozed" description="Snoozed messages. Same structure as Inbox." />

    <Page name="Sent" description="Outgoing messages. Same structure as Inbox." />

    <Page name="Important" description="Important messages. Same structure as Inbox." />

    <Page name="AllMail"
        description="All emails, including archived. Same structure as Inbox." />

    <Page name="Spam" description="Spam folder. Same structure as Inbox." />

    <Page name="Trash" description="Deleted messages. Same structure as Inbox." />

    <Page name="Categories"
        description="Categorized emails. Same structure as Inbox." />

