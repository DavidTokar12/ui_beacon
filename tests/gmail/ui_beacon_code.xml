    <xi:include href="pages/general_settings_page.xml" parse="xml" />
    
    <xi:include href="pages/all_settings_page.xml" parse="xml" />
    
    <xi:include href="pages/label_settings_page.xml" parse="xml" />
    
    <xi:include href="pages/inbox_settings_page.xml" parse="xml" />
    
    <xi:include href="pages/accounts_import_settings_page.xml" parse="xml" />
    
    <xi:include href="pages/filters_and_blocked_addresses_settings_page.xml" parse="xml" />
    
    <xi:include href="pages/forwarding_pop_imap_settings.xml" parse="xml" />
    
    <xi:include href="pages/view_email_page.xml" parse="xml" />


</Website>