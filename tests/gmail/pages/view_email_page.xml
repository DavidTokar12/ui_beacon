<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<Page
    id="ViewEmailPage"
    name="View Email"
    description="Displays a single opened email with a vertical toolbar and more actions."
>

    <Section title="Horizontal toolbar">
        <Nav
            text="Back to Inbox"
            icon="Left arrow icon"
            to="Inbox"
        />
        <Button
            text="Archive"
            icon="Archive icon"
            action="Archives this email"
        />
        <Button
            text="Report spam"
            icon="Exclamation icon"
            action="Marks this email as spam"
        />
        <Button
            text="Delete"
            icon="Trash icon"
            action="Deletes this email"
        />
        <Button
            text="Mark as unread"
            icon="Envelope icon"
            action="Marks this email as unread"
        />
        <Button
            text="Move to"
            icon="Folder icon"
            action="Moves this email to another label or folder"
        />

        <DropDown icon="More icon" action="Shows additional actions">
            <DropDownValue text="Snooze" action="Snoozes this email" />
            <DropDownValue text="Add to Tasks" action="Adds this email to tasks" />
            <DropDownValue text="Create event" action="Creates a calendar event from this email" />
            <DropDownValue text="Label as..." action="Applies a label to this email" />
            <DropDownValue text="Filter messages like these"
                action="Opens filter creation UI for similar messages" />
            <DropDownValue text="Mute" action="Mutes future replies for this conversation" />
            <DropDownValue text="Switch to advanced toolbar"
                action="Switches to advanced editing actions" />
        </DropDown>
    </Section>

    <Section title="Right-side actions" position="on the right side of the screen">
        <Button text="Print" action="Prints this email" />
        <Button text="Open in new window" action="Opens this email in a new browser window" />

        <Button text="Toggle starred state" action="Stars or unstars this email" />

        <Button text="Add reaction" action="Adds an emoji or reaction to this email" />
        <Button text="Reply" action="Replies to this email" />

        <DropDown icon="More icon" action="Shows more actions">
            <DropDownValue text="Forward" action="Forwards this email to a recipient" />
            <DropDownValue text="Filter messages like this"
                action="Opens filter creation with this sender" />
            <DropDownValue text="Delete this message" action="Deletes this email" />
            <DropDownValue text="Block &quot;Sender&quot;"
                action="Blocks future emails from this sender" />
            <DropDownValue text="Report spam" action="Flags this email as spam" />
            <DropDownValue text="Report phishing" action="Flags email for phishing" />
            <DropDownValue text="Report illegal content"
                action="Reports email as illegal content" />
            <DropDownValue text="Show original" action="Displays the raw email headers/source" />
            <DropDownValue text="Translate message" action="Translates this email content" />
            <DropDownValue text="Download message" action="Downloads this email as .eml" />
            <DropDownValue text="Mark as unread" action="Marks the email as unread" />
        </DropDown>
    </Section>

    <Text value="Subject of the email" />
    <Text value="Body of the email" />

    <Button text="Reply" action="Replies to this email" />
    <Button text="Forward" action="Forward this email" />

</Page>