            </ListItem>
            <ListItem>
                <Text value="Snoozed" />
                <Button text="show" />
                <Button text="hide" />
                <Button text="show if unread" />
            </ListItem>
            <ListItem>
                <Text value="Important" />
                <Button text="show" />
                <Button text="hide" />
            </ListItem>
            <ListItem>
                <Text value="Chats" />
                <Button text="show" />
                <Button text="hide" />
