    <Section title="Categories">
        <Text
            value="System-defined categories and how they appear in the label list or message list." />
        <List description="Category labels">
            <ListItem>
                <Text value="Categories" />
                <Button text="show" />
                <Button text="hide" />
            </ListItem>
            <ListItem>
                <Text value="Social" />
