    <Section title="Labels">
        <Button text="Create new label" action="Opens a dialog to create a new custom label" />

        <List description="User-created labels with editing options">
            <ListItem>
                <Text value="Label name" />
                <Button text="show" />
                <Button text="hide" />
                <Button text="show if unread" />
                <Button text="remove" />
                <Button text="edit" />
            </ListItem>
        </List>

        <Text value="Note: Removing a label will not remove the messages with that label." />
    </Section>
</Page>